[core]
        editor = nvim

[color]
        ui = auto

[alias]
        # Fancy looking commit log
        hist = log --all --graph --decorate --oneline
        last = log --all --graph --decorate --oneline -10

        s = status --short --branch
        gsh = git show HEAD

[colour]
        ui = auto

[credential]
	helper = cache --timeout=43200

[push]
	default = matching
