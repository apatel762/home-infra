[user]
    email = relay-git-1LKQ1GqLp0Nn4@aspatel.com
    name = Arjun Patel

[init]
    defaultBranch = master

[color]
    ui = auto

[alias]
    # Fancy looking commit log
    lg = log --all --graph --decorate --oneline
    last = log --all --graph --decorate --oneline -10

# taken from: https://github.com/x-motemen/ghq

[ghq]
    root = ~/Documents/Projects

# taken from: https://github.com/dandavison/delta

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
