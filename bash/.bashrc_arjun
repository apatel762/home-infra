# Startup processing
# change 'cd ~/Desktop/Processing' if the Processing directory changes
alias processing='(pushd ~/Desktop/Processing && \. processing) && popd'

# Startup Toggl
alias toggl='(pushd ~/toggldesktop/ && ./TogglDesktop.sh) && popd'

# Quick config editing
alias i3config='vim ~/.config/i3/config'
alias vimrc='vim ~/.vimrc'
alias bashrc='vim ~/.bashrc'
alias aliasadd='vim ~/.bash_aliases'

alias dotfiles='pushd ~/dotfiles'

alias c='clear'

alias vim='vi'
alias dt='cd ~/Desktop/'
alias doc='cd ~/Documents/'
alias dl='cd ~/Downloads/'

alias srcbp='source ~/.bashrc'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
